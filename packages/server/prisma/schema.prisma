// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model File {
    id String @id @default(dbgenerated()) @map("_id") @db.ObjectId
    name String?
    expiresIn DateTime
    uuid String @unique
    size Int
    mimeType String
}
